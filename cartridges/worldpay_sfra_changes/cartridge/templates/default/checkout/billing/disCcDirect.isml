<form class="disclaimer-agree" action="${URLUtils.url('CheckoutServices-Disclaimer')}" method="POST"
    name="disclaimer-form" id="disclaimer-agree">
    <label class="visuallyhidden" for="disclaimerYes">${pdict.order.Resources.getResource('worldpay.disclaimer.modaloptionyes', 'worldpay')}</label>
    <input type="radio" name="disclaimer" id="disclaimerYes" value="yes" /><span> ${pdict.order.Resources.getResource('worldpay.disclaimer.modaloptionyes', 'worldpay')}</span> <br />

    <label class="visuallyhidden" for="disclaimerNo">${pdict.order.Resources.getResource('worldpay.disclaimer.modaloptionno', 'worldpay')}</label>
    <input type="radio" name="disclaimer" id="disclaimerNo" value="no" checked /><span> ${pdict.order.Resources.getResource('worldpay.disclaimer.modaloptionno', 'worldpay')}</span> <br />
</form>
